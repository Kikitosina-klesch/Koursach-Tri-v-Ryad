        <Button x:Name="NameChange" Content="Change da Name" HorizontalAlignment="Left" Margin="20,200,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="NameChange_Click"/>
        <Label x:Name="Player" Content="Вы играете за: " HorizontalAlignment="Left" Margin="160,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.5" Width="135"/>
        <Label Content="ВАШ СЧЕТ:" HorizontalAlignment="Left" Margin="295,42,0,0" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="Sell" Content="Send the result" HorizontalAlignment="Left" Margin="840,465,0,0" VerticalAlignment="Top" Width="200" Height="40" Click="Sell_Click"/>

    </Grid>
</Window>
